{
  "productName": "Vutron",
  "appId": "com.vutron.vutron",
  "asar": true,
  "extends": null,
  "compression": "maximum",
  "copyright": 'â“’ 2022 ${author}',
  "directories": {
    "output": "dist",
    "buildResources": "buildRes"
  },
  "files": [
    "dist/electron/**/*"
  ],
  "artifactName": "${productName} ${version}.${ext}",
  "mac": {
    "bundleVersion": "1.0",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "icon": "buildRes/icons/icon.icns",
    "type": "distribution",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64",
          "universal"
        ]
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ],
    "sign": false
  },
  "win": {
    "icon": "buildRes/icons/icon.ico",
    "target": [
      {
        "target": "appx",
        "arch": "x64"
      },
      {
        "target": "zip",
        "arch": "x64"
      },
      {
        "target": "portable",
        "arch": "x64"
      },
      {
        "target": "nsis",
        "arch": "x64"
      }
    ]
  },
  "portable": {
    "artifactName": "${productName} ${version} Portable.${ext}"
  },
  "nsis": {
    "oneClick": true
  },
  "linux": {
    "executableName": "vutron",
    "icon": "buildRes/icons",
    "category": "Utility",
    "target": [
      {
        "target": "snap",
        "arch": "x64"
      },
      {
        "target": "deb",
        "arch": "x64"
      },
      {
        "target": "rpm",
        "arch": "x64"
      }
    ]
  }
}
